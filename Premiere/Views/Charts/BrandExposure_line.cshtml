                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle',
                borderWidth: 0
            },
            series: [
                
            ],
            xAxis: { }
        });
    });


    $(document).ready(function () {
            
        $('.col-md-3 .input-group.date').datepicker({
            format: "yyyymm",
            minViewMode: 1,
            language: "zh-CN",
            beforeShowMonth: function (date) {
                switch (date.getMonth()) {
                    case 0:
                        return false;
                    case 1:
                        return false;
                    case 2:
                        return false;
                    case 3:
                        return false;
                    case 4:
                        return false;

                }
            }
        }).on('changeDate', function (e) {
            var date = $('#date').val();
            //var to = $('#to-date').val();
            var table = $('#brandtable');
            var Url = '@Url.Action("ReturnContentForSpeadBlog")';
                        
                            $.ajax({
                                type: "GET",
                                url: "@Url.Action("DateChangedForBrandExposureLine")",
                                data:{Date:date},
                                dataType: "json"
                            })
                                .done(function (data) {
                                    //var legth = data.chart.length;

                                    $('#brandtable').empty();
                                    var contents = $.parseJSON(data);
                                    $.each(contents, function (key, values) {
                                        $.each(values, function (k, v) {
                                            table.append("<td><button class='btn btn-default brand' id=" + v.ID + " data-id=" + v.ID + ">" + v.BrandName + "</button></td>");
                                            var button = $('#'+v.ID);
                                            button.on('click', v.ID, function () {
                                                
                                                var chart = $('#container').highcharts();
                                                if (chart.series.length < 4) {
                                                    var series = jQuery.parseJSON(v.Series);

                                                    chart.addSeries(
                                                        {
                                                            name: v.BrandName+"("+v.Month+")",
                                                            data: series.data
                                                        });
                                                    }

                                            });
                                            if (k % 9 === 0) {
                                                
                                                if (k !==0) {
                                                    $('#brandtable').append("<tr></tr>");
                                                }
                                            }
                                        });
                                  
                                    });
                                      
                                   
                                });

                     


                    });
















